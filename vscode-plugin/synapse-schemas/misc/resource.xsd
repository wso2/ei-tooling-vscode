<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
           targetNamespace="http://ws.apache.org/ns/synapse"
           xmlns="http://ws.apache.org/ns/synapse">

    <xs:include schemaLocation="../mediators/mediators.xsd"/>


    <xs:complexType name="APIResource">
        <xs:annotation>
            <xs:documentation>
                This denotes the resource for a REST API
            </xs:documentation>
        </xs:annotation>
        <xs:all>
            <xs:element name="inSequence" minOccurs="0" maxOccurs="1">
                <xs:complexType>
                    <xs:sequence>
                        <xs:group ref="mediatorList" minOccurs="0" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="outSequence" minOccurs="0" maxOccurs="1">
                <xs:complexType>
                    <xs:sequence>
                        <xs:group ref="mediatorList" minOccurs="0" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element name="faultSequence" minOccurs="0" maxOccurs="1">
                <xs:complexType>
                    <xs:sequence>
                        <xs:group ref="mediatorList" minOccurs="0" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:all>
        <xs:attribute name="methods" use="required">
            <xs:simpleType>
                <xs:restriction base="xs:token">
                    <xs:enumeration value="GET"/>
                    <xs:enumeration value="POST"/>
                    <xs:enumeration value="PUT"/>
                    <xs:enumeration value="DELETE"/>
                    <xs:enumeration value="OPTIONS"/>
                    <xs:enumeration value="HEAD"/>
                    <xs:enumeration value="PATCH"/>
                </xs:restriction>
            </xs:simpleType>

        </xs:attribute>
         <xs:attribute name="protocol" use="optional">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="http"/>
                    <xs:enumeration value="https"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>

        <xs:attribute name="inSequence" type="xs:string" use="optional"/>
        <xs:attribute name="outSequence" type="xs:string" use="optional"/>
        <xs:attribute name="faultSequence" type="xs:string" use="optional"/>

        <xs:attributeGroup ref="templateOrMapping"/>
    </xs:complexType>

    <xs:attributeGroup name="templateOrMapping">
        <xs:annotation>
            <xs:documentation>
                This is used to define whether uri-template or url-mapping is used for the resource
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="uri-template" type="xs:string" use="optional"/>
        <xs:attribute name="url-mapping" type="xs:string" use="optional"/>
    </xs:attributeGroup>

</xs:schema>
